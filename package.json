{
  "name": "bohemica-studio-website-2020",
  "version": "0.1.0",
  "description": "New website for Bohemica Studio",
  "author": "Bohemica Studio",
  "scripts": {
    "copy:alpine": "copyfiles --flat node_modules/alpinejs/dist/alpine.js source/script",
    "copy:alpine-magic-helpers": "copyfiles --flat node_modules/alpine-magic-helpers/dist/*.js source/script/alpine-magic-helpers",
    "copy:animejs": "copyfiles --flat node_modules/animejs/lib/anime.min.js source/script",
    "copy:spruce": "copyfiles --flat node_modules/@ryangjchandler/spruce/dist/spruce.umd.js source/script",
    "copy:franxx": "copyfiles --flat node_modules/franxx/dist/franxx.umd.js source/script",
    "copy:navigo": "copyfiles --flat node_modules/navigo/lib/navigo.js source/script",
    "copy:files": "run-p copy:alpine copy:spruce copy:alpine-magic-helpers copy:animejs copy:franxx copy:navigo",
    "serve": "npm run copy:files && eleventy --serve & postcss source/tailwind.css --o temporary/style.css --watch",
    "build": "trash build && npm run copy:files && ELEVENTY_PRODUCTION=true eleventy && npm run build:tailwind",
    "build:tailwind": "NODE_ENV=production postcss source/tailwind.css --o build/style.css"
  },
  "devDependencies": {
    "@11ty/eleventy": "^0.11.1",
    "@ryangjchandler/spruce": "^2.2.2",
    "alpine-magic-helpers": "^0.5.1",
    "alpinejs": "^2.7.3",
    "animejs": "^3.2.1",
    "autoprefixer": "^10.0.4",
    "clean-css": "^4.2.3",
    "connect-history-api-fallback": "^1.6.0",
    "copyfiles": "^2.4.1",
    "cssnano": "^4.1.10",
    "franxx": "^1.2.1",
    "html-minifier-terser": "^5.1.1",
    "navigo": "^7.1.2",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.1.13",
    "postcss-cli": "^8.3.0",
    "prettier": "^2.2.1",
    "tailwindcss": "^2.0.1",
    "terser": "^5.5.1",
    "trash-cli": "^4.0.0"
  }
}
