{
  "name": "bohemica-studio-website-2020",
  "version": "0.1.0",
  "description": "New website for Bohemica Studio",
  "author": "Bohemica Studio",
  "scripts": {
    "build": "trash build && pnpm run copy:files && ELEVENTY_PRODUCTION=true eleventy && pnpm run build:tailwind",
    "build:tailwind": "NODE_ENV=production postcss source/style/style.css --o build/style.css",
    "copy:alpine": "copyfiles --flat node_modules/alpinejs/dist/alpine.js source/script/libs",
    "copy:alpine-magic-helpers": "copyfiles --flat node_modules/alpine-magic-helpers/dist/*.js source/script/libs/alpine-magic-helpers",
    "copy:anime": "copyfiles --flat node_modules/anime/lib/anime.min.js source/script/libs",
    "copy:navigo": "copyfiles --flat node_modules/navigo/lib/navigo.js source/script/libs",
    "copy:spruce": "copyfiles --flat node_modules/@ryangjchandler/spruce/dist/spruce.umd.js source/script/libs",
    "copy:tippy": "copyfiles --flat node_modules/tippy.js/dist/tippy-bundle.umd.js source/script/libs",
    "copy:popper": "copyfiles --flat node_modules/@popperjs/core/dist/umd/popper.js source/script/libs",
    "debug": "set DEBUG=* & eleventy",
    "serve": "run-s copy:* serve:eleventy & pnpm run watch:style",
    "serve:eleventy": "eleventy --serve",
    "sort": "npx sort-package-json",
    "watch:style": "postcss source/style/style.css --output temporary/style.css --watch"
  },
  "devDependencies": {
    "@11ty/eleventy": "^0.11.1",
    "@11ty/eleventy-img": "^0.7.4",
    "@popperjs/core": "^2.6.0",
    "@ryangjchandler/spruce": "^2.5.0",
    "@tailwindcss/aspect-ratio": "^0.2.0",
    "alpine-magic-helpers": "^0.5.1",
    "alpinejs": "^2.8.0",
    "animejs": "^3.2.1",
    "autoprefixer": "^10.2.1",
    "clean-css": "^4.2.3",
    "connect-history-api-fallback": "^1.6.0",
    "copyfiles": "^2.4.1",
    "cssnano": "^4.1.10",
    "html-minifier-terser": "^5.1.1",
    "moment": "^2.29.1",
    "navigo": "^8.4.4",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.2.4",
    "postcss-cli": "^8.3.1",
    "postcss-import": "^14.0.0",
    "postcss-nested": "^5.0.3",
    "prettier": "^2.2.1",
    "tailwindcss": "^2.0.2",
    "terser": "^5.5.1",
    "tippy.js": "^6.2.7",
    "trash-cli": "^4.0.0"
  }
}
