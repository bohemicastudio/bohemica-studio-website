{
  "name": "bohemica-studio-website",
  "version": "0.3.0",
  "description": "Bohemica Studio Website",
  "homepage": "http://bohemicastudio.github.io/bohemica-studio-website",
  "author": "Bohemica Studio",
  "scripts": {
    "build": "run-s clean copy:* build:eleventy build:tailwind",
    "build:eleventy": "cross-env ELEVENTY_ENV=production eleventy",
    "build:gh-pages": "cross-env NODE_ENV=deploy pnpm run build",
    "build:style": "cross-env NODE_ENV=development postcss source/style/style.css --output temporary/style.css --verbose",
    "build:tailwind": "cross-env NODE_ENV=production postcss source/style/style.css --output build/style.css --verbose",
    "clean": "trash build",
    "copy:alpine": "copyfiles --flat node_modules/alpinejs/dist/alpine.js source/script/libs",
    "copy:alpine-magic-helpers": "copyfiles --flat node_modules/alpine-magic-helpers/dist/*.js source/script/libs/alpine-magic-helpers",
    "copy:alpine-toggle": "copyfiles --flat node_modules/@ryangjchandler/alpine-toggle/dist/alpine-toggle.umd.js source/script/libs",
    "copy:anime": "copyfiles --flat node_modules/animejs/lib/anime.min.js source/script/libs",
    "copy:arrive": "copyfiles --flat node_modules/arrive/src/arrive.js source/script/libs",
    "copy:dayjs": "copyfiles --flat node_modules/dayjs/dayjs.min.js source/script/libs",
    "copy:medium-zoom": "copyfiles --flat node_modules/medium-zoom/dist/medium-zoom.js source/script/libs",
    "copy:navigo": "copyfiles --flat node_modules/navigo/lib/navigo.js source/script/libs",
    "copy:popper": "copyfiles --flat node_modules/@popperjs/core/dist/umd/popper.js source/script/libs",
    "copy:spruce": "copyfiles --flat node_modules/@ryangjchandler/spruce/dist/spruce.umd.js source/script/libs",
    "copy:tippy": "copyfiles --flat node_modules/tippy.js/dist/tippy-bundle.umd.js source/script/libs",
    "copy:emailsign": "copyfiles -f source/email/* build/email/",
    "copy:txt": "copyfiles -f source/*.txt build/",
    "debug": "DEBUG=Eleventy* npx @11ty/eleventy --serve",
    "deploy:gh-pages": "gh-pages -d build",
    "deploy": "cross-env NODE_ENV=deploy run-s build deploy:gh-pages",
    "serve": "run-s copy:* serve:eleventy & run-s build:style watch:style",
    "serve:eleventy": "cross-env ELEVENTY_ENV=development eleventy --serve",
    "sort": "npx sort-package-json",
    "watch:style": "onchange 'source/style' 'tailwind.config.js' -- pnpm run build:style",
    "lighthouse": "cross-env LIGHTHOUSE_BADGES_PARAMS='--preset=desktop' lighthouse-badges --urls https://bohemicastudio.com --output source/lighthouse --single-badge --save-report"
  },
  "devDependencies": {
    "@11ty/eleventy": "^0.12.1",
    "@11ty/eleventy-img": "^0.8.3",
    "@popperjs/core": "^2.9.2",
    "@ryangjchandler/alpine-toggle": "^0.1.0",
    "@ryangjchandler/spruce": "2.7.0",
    "@tailwindcss/aspect-ratio": "^0.2.0",
    "@tailwindcss/typography": "^0.4.0",
    "alpine-magic-helpers": "^1.2.2",
    "alpinejs": "^2.8.2",
    "animejs": "^3.2.1",
    "arrive": "^2.4.1",
    "autoprefixer": "^10.2.5",
    "clean-css": "^5.1.2",
    "connect-history-api-fallback": "^1.6.0",
    "copyfiles": "^2.4.1",
    "cross-env": "^7.0.3",
    "cssnano": "^5.0.2",
    "dayjs": "^1.10.4",
    "gh-pages": "^3.1.0",
    "html-minifier-terser": "^5.1.1",
    "lighthouse-badges": "^1.1.4",
    "medium-zoom": "^1.0.6",
    "moment": "^2.29.1",
    "navigo": "8.11.1",
    "npm-run-all": "^4.1.5",
    "onchange": "^7.1.0",
    "postcss": "^8.2.14",
    "postcss-cli": "^8.3.1",
    "postcss-import": "^14.0.1",
    "postcss-nested": "^5.0.5",
    "prettier": "^2.3.0",
    "tailwindcss": "^2.1.2",
    "terser": "^5.7.0",
    "tippy.js": "^6.3.1",
    "trash-cli": "^4.0.0"
  }
}
