{% macro sectionIntro(name, backgroundColor='gray-legacy-800', textColor='blue', lineColor='gray-legacy-200', subtitle=true ) %}
	<div id="{{ name }}-intro" class="relative mx-auto w-full transform -translate-y-1/3 md:-translate-y-1/2 md:w-8/12 md:container-screen">
		<div class="flex flex-col justify-center items-center text-center bg-{{ backgroundColor }} rounded-4xl"> {# style="min-height: calc((0.25vw + 0.25vh + 0.5vmin) * 40)" #}
			<div class="px-6 pt-10 pb-6 space-y-4 md:px-16 md:pt-16 md:pb-12 md:space-y-8">
				<h2 class="text-4xl sm:text-5xl text-{{ textColor }}-400 lg:text-6xl xl:text-7xl" x-text="$store['global'].return('sections.{{ name }}.title')"></h2>
				{% if subtitle %}
					<p class="leading-7 text-{{ textColor }}-200 lg:leading-8 lg:text-lg font-dm-mono" x-text="$store['global'].return('sections.{{ name }}.subtitle')"></p>
				{% endif %}
			</div>
			<div class="flex relative flex-grow justify-center w-full h-20 md:h-28">
				<hr class="absolute border-t-0 border-l border-{{ lineColor }}" style="bottom: -100%; height: 200%">
			</div>
		</div>
	</div>
{% endmacro %}
