<h3 class="pb-8 mb-16 text-3xl font-semibold text-cool-gray-900 border-b border-cool-gray-500">
	Project library
</h3>

<div class="grid grid-cols-2 auto-rows-fr gap-x-4 gap-y-4">
	<template x-for="(entry, index) in Object.entries($store['translation.projects'].return('list'))" :key="entry[0]">
		<a x-bind:href="window.router.getPath(entry[0])" data-navigo class="flex flex-col col-span-1 justify-between items-start p-6 space-y-12 bg-cool-gray-200 rounded-3xl border border-cool-gray-200 transition duration-100 ease-linear cursor-pointer hover:border-cool-gray-400">
			<div class="flex flex-grow items-center">
				<img x-bind:class="'h-'+entry[1].logoHeight" x-bind:src="`/images/projects/${entry[0]}/${entry[1].logo}`">
			</div>
			<div class="flex flex-col space-y-3 text-2xl">
				<span class="text-cool-gray-800" x-text="entry[1].client + ' | ' + entry[1].year"></span>
				<div class="flex flex-wrap space-x-1 space-x-reverse">
					<template x-for="(category, index) in entry[1].categories">
						<span class="select-none text-white bg-cool-gray-600 text-sm px-2.5 py-1 rounded-full font-medium whitespace-nowrap" x-text="category"></span>
					</template>
				</div>
			</div>
		</a>
	</template>
</div>

